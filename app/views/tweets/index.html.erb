<%# 検索画面 %>
<%= form_with(url: tweets_searches_path, local: true, method: :get, class: "search-form") do |form| %>
<%# form_withのモデル（DB）使わないパターン %>
<%# メソッドはHTTPメソッド %>

  <%= form.text_field :keyword, placeholder: "投稿したライセンス商品を検索する", class: "search-input" %>
  <%# 検索窓を作成 %>

  <%= form.submit "検索", class: "search-btn" %>
  <%# 検索ボタン %>

<% end %>
<%# ↑検索機能を実装 %>

<%# トップページ %>
<div class="contents all">
  <div class="contents row">

    <% @tweets.each do |tweet| %>
    <%# each文で全てのツイートを表示させる %>

      <%= render partial: "tweet", locals: { tweet: tweet } %>
      <%# each〜endの間を全部、部分テンプレートで置き換え。可読性アップ。 %>
    <% end %>
    <%= paginate(@tweets) %>
    <%# paginateメソッド：ページネーションのリンクを表示したいときに使用するメソッド %>
  </div>
</div>

